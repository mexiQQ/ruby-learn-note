          'tom'   => 'lijianwei',
          'jerry' => 'lijianweini'
        }
  dic2 = {
          tom: 'lijianwei',
          jerry: 'lijianweini'
        }
  dic3 = {
          :tom   => 'lijianwei',
          :jerry => 'lijianweini'
        }
  puts dic1
  puts dic2
  puts dic3

